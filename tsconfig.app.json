{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": ["vite/client", "unplugin-vue-router/client"],
    "noEmit": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "./node_modules/tdesign-mobile-vue/global.d.ts",
    "types/*.d.ts"
  ],
  "exclude": ["src/**/__tests__/*"]
}
